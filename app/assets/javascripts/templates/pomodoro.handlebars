{{#if view.isEditing}}
<div class="pomodoro_details">
  {{ view Ember.TextField valueBinding="tag" }} 
</div>
<div class="actions ss-icon">
  <a {{action update target="view"}}>check</a>
</div>
<div class="clear"></div>
{{else}}

  <div class="pomodoro_time">{{pomodoro_time startTime}}â€”{{pomodoro_time endTime}}</div>
  <div class="pomodoro_tag">{{#if tag}}<span class="tag">{{tag}}</span>{{/if}}</div>

  <div class="actions ss-icon">
    <a {{action edit target="view"}}>edit</a>
    <a class="destroy" {{action deletePomodoro id }} class="delete_pomodoro">delete</a>
  </div>
  <div class="clear"></div>
{{/if}}
